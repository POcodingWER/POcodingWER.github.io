---
layout: null
---
[
{% assign filtered_posts = site.posts | where_exp: "post", "post.hidden != true" %}
{% for post in filtered_posts %}
  {
    "title"    : "{{ post.title | escape }}",
    "subtitle" : "{{ post.subtitle | escape }}",
    "tags"     : "{{ post.tags | join: ', ' }}",
    "url"      : "{{ site.baseurl }}{{ post.url }}",
    "date"     : "{{ post.date }}"
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]