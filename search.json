---
layout: null
---
[
  {% for post in site.posts %}
    {% if post.hidden != true and post.search != false and post.exclude_from_search != true %}
    {
      "title"    : "{{ post.title | escape }}",
      "subtitle" : "{{ post.subtitle | escape }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}"
    }{% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]